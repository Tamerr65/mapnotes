<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"

    android:background="@color/color60"
    tools:context=".LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            style="@style/Headline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anmelden"
            android:layout_marginBottom="45dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="E-Mail"

            app:boxStrokeColor="@color/color10"
            app:hintTextColor="@color/color10"
            app:cursorColor="@color/iconColor"
            app:startIconDrawable="@drawable/ic_email_24"

            android:theme="@style/EditTextThemeOverlay"
            >

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Hint"
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Passwort"

            app:boxStrokeColor="@color/color10"
            app:hintTextColor="@color/color10"
            app:cursorColor="@color/iconColor"
            app:startIconDrawable="@drawable/ic_password_24"

            android:theme="@style/EditTextThemeOverlay"
            >

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Hint"
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            style="@style/Button"
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:text="Anmelden"
            android:backgroundTint="@color/color10"
            android:textColor="@android:color/white"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="26dp"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"

        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            style="@style/Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noch kein Konto?"
            android:layout_marginEnd="4dp"/>

        <TextView
            style="@style/ClickText"
            android:id="@+id/register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hier registrieren"
            />

    </LinearLayout>


    <View
        android:id="@+id/dim_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

</RelativeLayout>